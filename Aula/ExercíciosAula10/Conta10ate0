Algoritmo "Fatorial"
Var
    C, N, F: Inteiro
    Resp: Caractere
Inicio
    Repita
        Escreva ("Digite um numero : ")
        Leia (N)
        C <- N
        F <- 1
        Repita
            F <- F * C
            C <- C - 1    
        Ate (C < 1)
        Escreval ("O valor do fatorial de ", N, "e igual a ", F)
        Escreva("Deseja olhar outro numero [S/N] : ")
        Leia (Resp)
    AtÃ© (Resp = "N")
