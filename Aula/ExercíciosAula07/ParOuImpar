Algoritmo "Condicional1"

Var
    Numero:Real

Inicio
    Escreval("Me de um numero?")
    Leia(Numero)

    Se (numero%2 = 0 ) entao 
    //%(modulo) -> resto da divisão
        Escreval("O numero ", Numero, " é par")
    senao
        Escreval("O numero ", Numero, " é impar")
    FimSe

Fimalgoritmo