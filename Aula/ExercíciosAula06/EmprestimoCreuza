Algoritmo "Emprestimo"

Var
    //Juros
    Emprestimo, Juros, PosJuros: Real

    //Parcela
    Parcela, ValorParcela: Real

Inicio
    //Juros
    Escreval("Qual o valor do emprestimo?")
    Leia(Emprestimo)
    Juros <- (Emprestimo*20)/100
    PosJuros<- Emprestimo+Juros
    Escreval("O valor final do emprestimo junto ao juros é de R$", PosJuros)

    //Parcela
    Escreval("Deseja parcelar em quantas vezes?")
    Leia(Parcela)
    ValorParcela <- PosJuros/Parcela
    Escreval("O valor das parcelas é de R$", ValorParcela, " durante ", Parcela, " meses")

Fimalgoritmo